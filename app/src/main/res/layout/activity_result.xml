<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:text="Your BMI is: "
        android:textColor="@color/purple_200"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp"
        android:text="OlÃ¡ Mundo"
        android:textAlignment="center"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/btnClassificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text=" Classification: Normal Weight"
        android:textAlignment="center"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Here is the classification table: "
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" BMI 18.5 to 24.9: Normal weight"
        android:layout_margin="1dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" BMI 25 to 29.9: Overweight "
        android:layout_margin="4dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" BMI 30 to 34.9: Obesity - Grade 1 "
        android:layout_margin="4dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" BMI 35 to 39.9: Obesity - Grade 2 "
        android:layout_margin="4dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" BMI over 40: Obesity - Grade 3 "
        android:layout_margin="4dp"
        android:textAlignment="center" />

</LinearLayout>